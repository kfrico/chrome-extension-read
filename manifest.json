{
  "name": "舒適閱讀",
  "description": "讓網頁配色更適合眼睛閱讀 提供多種配色組合供參考",
  "version": "1.9.0",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "tabs"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_icon": "icon48-off.png",
    "default_title": "舒適閱讀"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/jquery.min.js", "js/content.js"],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "manifest_version": 3,
  "icons": { 
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
